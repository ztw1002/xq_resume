.form-group {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  background: #FFFFFF;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.radio-group {
  display: flex;
  flex-wrap: wrap;
}

.radio {
  margin-right: 40rpx;
  font-size: 28rpx;
  color: var(--text-color);
}

.picker {
  width: 100%;
  height: 88rpx;
  background: #FFFFFF;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.picker-inner {
  font-size: 28rpx;
  color: var(--text-color);
}

.photo-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.photo-item {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  position: relative;
}

.photo-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.photo-delete {
  position: absolute;
  right: -16rpx;
  top: -16rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.photo-add {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  background: #FFFFFF;
  border: 2rpx dashed var(--border-color);
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.add-icon {
  font-size: 48rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 24rpx;
  color: #999999;
}

.textarea {
  width: 100%;
  height: 200rpx;
  background: #FFFFFF;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  padding: 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.submit-btn {
  margin-top: 60rpx;
  padding-bottom: 60rpx;
}